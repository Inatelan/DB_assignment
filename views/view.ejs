<h2><%= row.title %></h2>
<p><%= row.content %></p>
<p>조회수: <%= row.view_count %></p>

<p>
    <a href="/board/edit/<%= row.id %>"><button>수정</button></a>
    <a href="/board/delete/<%= row.id %>"><button>삭제</button></a>
</p>

<hr>
<h3>댓글</h3>

<% if (!comments || comments.length === 0) { %>
    <p>등록된 댓글이 없습니다.</p>
<% } else { %>
    <ul>
    <% comments.forEach(function(comment){ %>
    <li>
        <strong><%= comment.nickname %></strong> - <%= comment.content %>
        <a href="/board/comment/delete/<%= comment.id %>"><button>삭제</button></a>
    </li>
    <% }); %>

    </ul>
<% } %>

<form method="post" action="/board/comment/<%= row.id %>">
    <label for="nickname">닉네임:</label><br>
    <input type="text" id="nickname" name="nickname" placeholder="닉네임 입력 (선택)"><br><br>

    <label for="content">댓글 작성:</label><br>
    <textarea id="content" name="content" rows="3" placeholder="댓글 작성"></textarea><br>
    
    <button type="submit">댓글 등록</button>
</form>


